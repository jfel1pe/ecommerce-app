// 1. Indica que usamos PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. Generador del cliente Prisma
generator client {
  provider = "prisma-client-js"
}

// 3. Modelo de ejemplo: usuario
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}