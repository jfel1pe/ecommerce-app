// 1. Indica que usamos PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. Generador del cliente Prisma
generator client {
  provider = "prisma-client-js"
}

// 3. Modelo de usuario
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

// 4. Modelo de producto
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  size        String
  color       String
  stock       Int
  imageUrl    String?   // ‚Üê nuevo campo opcional
  createdAt   DateTime @default(now())
}

// 5. Modelo del carrito
model Cart {
  id         Int      @id @default(autoincrement())
  product    String
  quantity   Int
  totalPrice Float
  createdAt  DateTime @default(now())
}